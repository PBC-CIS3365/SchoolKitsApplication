<AnchorPane prefHeight="580.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.createInventoryItemController">
   <children>
      <VBox layoutX="108.0" layoutY="66.0" prefHeight="387.0" prefWidth="159.0" spacing="15.0">
         <children>
            <TextField fx:id="nameTxt" />
            <TextArea fx:id="descriptionTxt" prefHeight="51.0" prefWidth="150.0" />
            <Spinner fx:id="qtySpinner" prefHeight="26.0" prefWidth="78.0" />
            <ComboBox fx:id="categoryCombo" prefWidth="150.0" />
            <ComboBox fx:id="deptCombo" onMouseClicked="#fillDepartments" prefWidth="150.0" />
            <ComboBox fx:id="brandCombo" prefWidth="150.0" />
            <Button fx:id="uploadBtn" mnemonicParsing="false" onAction="#uploadImage" text="Upload Image" />
            <TextField fx:id="urlTxt" prefHeight="22.0" prefWidth="159.0" />
            <TextArea fx:id="notesTxt" prefHeight="54.0" prefWidth="159.0" />
         </children>
      </VBox>
      <Label layoutX="20.0" layoutY="71.0" text="Name of item:" />
      <Label layoutX="22.0" layoutY="122.0" text="Description:" />
      <Label layoutX="29.0" layoutY="173.0" text="Quantity:" />
      <Label layoutX="19.0" layoutY="251.0" text="Department:" />
      <Label layoutX="36.0" layoutY="293.0" text="Brand:" />
      <Label layoutX="14.0" layoutY="333.0" text="Upload image:" />
      <Label layoutX="27.0" layoutY="378.0" text="Web URL:" />
      <Label layoutX="41.0" layoutY="426.0" text="Notes:" />
      <JFXButton fx:id="addItemBtn" buttonType="RAISED" layoutX="309.0" layoutY="187.0" onAction="#addItem" prefHeight="39.0" prefWidth="110.0" style="-fx-background-color: #008ACD;" text="Add item" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </JFXButton>
      <Label layoutX="135.0" layoutY="14.0" text="Suppply Item Form" underline="true">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="207.0" text="Category:" />
      <ImageView fx:id="imageView" fitHeight="331.0" fitWidth="300.0" layoutX="275.0" layoutY="236.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
